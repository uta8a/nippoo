<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>日報</title>
    <link rel="stylesheet" href="../reset.css" />
    <link rel="stylesheet" href="../index.css" />
    <link rel="stylesheet" href="../md.css" />
  </head>
  <body>
    <header>
      <h1><a href="/">日報</a></h1>
      <p>{{day}}</p>
    </header>
    <main>
      <article>
        {{#if isComment}}
        <section id="comment">
          <h2>まとめ</h2>
          <div class="md">
            {{{comment}}}
          </div>
        </section>
        {{/if}}
        {{#if isToggl}}
        <section id="toggl">
          <h2>Toggl</h2>
          <div class="toggl">
            {{#each toggl}}
            <p>{{start}} ~ {{end}} {{description}} ({{duration}})</p>
            {{/each}}
          </div>
        </section>
        {{/if}}
        {{#if isTimes}}
        <section id="times">
          <h2>#times</h2>
          <div class="times-container">
            {{#each times}}
            <div class="times">
              <p>{{time}}</p>
              <div class="md">
                {{{body}}}
              </div>
            </div>
            {{/each}}
          </div>
        </section>
        {{/if}}
        {{#if isTweet}}
        <section id="tweet">
          <h2>Tweet</h2>
          <div class="tweet-container">
            {{#each tweet}}
            <div class="tweet">
              <div>
                <p>{{date}}</p>
                <p class="id">Tweet ID: {{tweet_id}}</p>
              </div>
              <p>{{text}}</p>
            </div>
            {{/each}}
          </div>
        </section>
        {{/if}}
      </article>
    </main>
  </body>
</html>
